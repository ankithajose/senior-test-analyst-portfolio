{
  "info": {
    "name": "API Token Authentication â€“ Sample",
    "description": "Demonstrates token-based authentication testing using Postman. Includes authorized and unauthorized access scenarios.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "GET - Access with Valid Token",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{authToken}}"
          }
        ],
        "url": {
          "raw": "https://jsonplaceholder.typicode.com/posts",
          "protocol": "https",
          "host": ["jsonplaceholder", "typicode", "com"],
          "path": ["posts"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Authorized request returns success', function () {",
              "    pm.expect(pm.response.code).to.be.oneOf([200]);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "GET - Access without Token (Unauthorized)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "https://jsonplaceholder.typicode.com/posts",
          "protocol": "https",
          "host": ["jsonplaceholder", "typicode", "com"],
          "path": ["posts"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Unauthorized access is handled', function () {",
              "    pm.expect(pm.response.code).to.be.oneOf([401, 200]);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    }
  ]
}
